@model StoreFront.DATA.EF.Models.ProductStatus

@{
    ViewData["Title"] = "Delete" + Model.Status + "?";
}

@* <h1>Delete</h1>
 *@

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="section-tittle mb-60 text-center pt-10">
                <h2>Delete @Model.Status?</h2>

            </div>
        </div>
    </div>
</div>
