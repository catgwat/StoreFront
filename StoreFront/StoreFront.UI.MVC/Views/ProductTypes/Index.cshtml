@model IEnumerable<StoreFront.DATA.EF.Models.ProductType>

@{
    ViewData["Title"] = "Product Type";
}

@* <h1>Index</h1> *@


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="section-tittle mb-60 text-center pt-10">
                <h2>Product Types</h2>
                <p align="center">
                    @if (User.IsInRole("Admin"))
            {
                    <a asp-action="Create" class="genric-btn primary circle">Create New Product Type</a>
            }
                </p>
            </div>
        </div>
    </div>
</div>

<section class="product-section pb-4 pt-4 mb-4">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductTypeDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTypeDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductTypeId">Edit</a> |
               @*  <a asp-action="Details" asp-route-id="@item.ProductTypeId">Details</a> | *@
                        @if (item.Products.Count() == 0)//item.OrderProducts retrieves any related records for the Product
                        {
                            <a asp-action="Delete" asp-route-id="@item.ProductTypeId">Delete</a>

                        }
                        else
                        {
                            <a disabled="true" class="text-danger" style="text-decoration: line-through;" title="Can't delete - referenced by other records.">Delete</a>
                        }
                
            </td>
        </tr>
}
    </tbody>
</table>
</section>