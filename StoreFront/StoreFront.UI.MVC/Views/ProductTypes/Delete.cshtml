@model StoreFront.DATA.EF.Models.ProductType

@{
    ViewData["Title"] = "Delete " + Model.ProductTypeName + "?";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="section-tittle mb-60 text-center pt-10">
                <h2>Delete @Model.ProductTypeName?</h2>
            </div>
        </div>
    </div>
</div>
@* <h1>Delete</h1>
 *@
<h3 class="alert alert-danger">Are you sure you want to delete @Model.ProductTypeName? This action cannot be undone!</h3>
<div>
    @* <h4>ProductType</h4>
    <hr /> *@
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductTypeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductTypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductTypeDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductTypeDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductTypeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Product Type List</a> <br /><br />
    </form>
</div>
