@model StoreFront.DATA.EF.Models.Category

@{
    ViewData["Title"] = "Delete " + Model.CategoryName + "?";
}

@* <h1>@ViewData["Title"]</h1><br /><br /> *@

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="section-tittle mb-60 text-center pt-10">
                <h2>Delete @Model.CategoryName?</h2>
            </div>
        </div>
    </div>
</div>

<h3 class="alert alert-danger">Are you sure you want to delete @Model.CategoryName? This action cannot be undone!</h3><br />
<div>
    @* <h4>Category</h4>
    <hr /> *@
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
    </dl><br />
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Categories</a><br /><br />
    </form>
</div>

    

