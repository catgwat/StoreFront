@model StoreFront.DATA.EF.Models.Category

@{
    ViewData["Title"] = Model.CategoryName + " Details";
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="section-tittle mb-60 text-center pt-10">
                <h2>@Model.CategoryName Details</h2>
            </div>
        </div>
    </div>
</div>
<div>
    @* <h4>Category</h4>
    <hr /> *@
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
    </dl>
</div>
<div class="mb-3">
    <a asp-action="Edit" asp-route-id="@Model?.CategoryId">Edit</a> |
    <a asp-action="Index">Back to Categories</a>
</div>

